@using Ap.Common.Constants
@using Vivablast.ViewModels
@model StockViewModel

@{
    ViewBag.Title = "Stock Management Quantity";
}

<div class="bs-docs-header">
    <div class="container" role="search">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <form class="form-inline">
                    <div class="form-group">
                        <label>Store</label>
                        @Html.DropDownListFor(model => model.StoreId, Model.Stores, @Constants.AllDLL, new { @id = "searchStore", @class = "form-control" })
                    </div>
                    <div class="float-left marginleft10 margintop5">
                        <label>Type</label>
                    </div>
                    <div class="float-left marginleft10">
                        @Html.DropDownListFor(model => model.iType, Model.Types, @Constants.AllDLL, new { @id = "searchType", @class = "form-control" })
                    </div>
                    <div class="float-left marginleft10 margintop5">
                        <label>Category</label>
                    </div>
                    <div class="float-left marginleft10">
                        @Html.DropDownListFor(model => model.bCategoryID, Model.Categories, @Constants.AllDLL, new { @id = "searchCategory", @class = "form-control width150" })
                    </div>
                    <div class="float-left marginleft10 margintop5">
                        <label>Stock Code</label>
                    </div>
                    <div class="float-left marginleft10">
                        @Html.TextBoxFor(model => model.vStockID, new { @id = "StockCode", @placeholder = "Stock Code", @class = "form-control" })
                    </div>
                    <div class="float-left marginleft10 margintop5">
                        <label>Stock Name</label>
                    </div>
                    <div class="float-left marginleft10">
                        @Html.TextBoxFor(model => model.vStockName, new { @id = "StockName", @placeholder = "Stock Name", @class = "form-control" })
                    </div>

                    <div class="clearboth height10"></div>

                    <div class="float-left width45 margintop5">
                        <label>From</label>
                    </div>
                    <div class="input-group date float-left width220">
                        <input id="fromDate" value="@Constants.FromDate" type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                    </div>
                    <div class="float-left width30 marginleft10 margintop5">
                        <label>To</label>
                    </div>
                    <div class="input-group date float-left width220 marginright10">
                        <input id="toDate" value="@Constants.ToDate" type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                    </div>

                    <div class="form-group">
                        <label>@Constants.Rows</label>
                        <select id="pageSize" class="form-control">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="1000">All</option>
                        </select>
                    </div>
                    <div class="form-group button-control">
                        <button type="button" id="btnSearch" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Search
                        </button>
                        <button type="button" id="btnExport" class="btn btn-primary">
                            <span class="glyphicon glyphicon-export"></span> Export
                        </button>
                        @Html.ActionLink("List Stock", "Index", "Stock", new { @class = "btn btn-default" })
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container" role="list">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="list-session">
                <div class="alert alert-info bold" role="alert">LOADING...</div>
            </div>
        </div>
    </div>
</div>

<script src="/Scripts/tmx.stocktrackquantity.js?v=@System.Configuration.ConfigurationManager.AppSettings["Version"]"></script>
