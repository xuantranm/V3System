@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "vat-create-form", @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    <input type="hidden" value="@Url.Action("NewVAT", "PE")" id="hidSaveUrl" />

    <div class="form-group">
        <label class="col-sm-2">VAT <span class="red">*</span></label>
        <div class="col-sm-10">
            <input type="number" id="new-vat" class="form-control number" placeholder="VAT" />
        </div>
    </div>
}
