@using Ap.Common.Constants
@using Vivablast.ViewModels
@model UserViewModel

@{
    ViewBag.Title = "Index";
}

<div class="bs-docs-header">
    <div class="container" role="search">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <form class="form-inline">
                    <div class="form-group">
                        <label>Store</label>
                        @Html.DropDownListFor(model => model.StoreId, Model.Stores, @Constants.AllDLL, new { @id = "searchStore", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        @Html.DropDownListFor(model => model.DepartmentId, Model.Deparments, Constants.AllDLL, new { @id = "searchDepartment", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Search by</label>
                        <input type="text" name="search" class="form-control" id="searchUser" placeholder="User name">
                    </div>
                    <div class="form-group">
                        <label>@Constants.Rows</label>
                        <select id="pageSize" class="form-control">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="0">All</option>
                        </select>
                    </div>
                    <div class="form-group button-control">
                        <button type="button" id="btnSearch" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Search
                        </button>
                        @if (Model.UserLogin.UserR >1)
                        {
                            <a href="@Url.Action("Create","User")" class="btn btn-primary">
                                <span class="glyphicon glyphicon-plus"></span> New
                            </a>
                        }

                        <button type="button" id="btnExport" class="btn btn-primary">
                            <span class="glyphicon glyphicon-export"></span> Export
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container" role="list">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="list-session">
                <div class="alert alert-info bold" role="alert">LOADING...</div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" value="@Url.Action("Delete", "User")" id="hidDeleteUrl" />
<script src="/Scripts/tmx.usermanager.js?v=@System.Configuration.ConfigurationManager.AppSettings["Version"]"></script>
