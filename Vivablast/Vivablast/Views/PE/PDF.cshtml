@using Vivablast.ViewModels
@model XPePdfViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Vivablast Management System</title>
    <link href="/Images/img/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    @*<link href="/Content/styles.css" rel="stylesheet" />*@
    <script src="/scripts/jquery.min.js"></script>
    <script src="/Scripts/jquery-ui.js"></script>
    <script src="/Content/bootstrap/js/bootstrap.min.js"></script>
    <script src="/Scripts/common.js?v=@System.Configuration.ConfigurationManager.AppSettings["Version"]"></script>
</head>
<body>
    <div class="container">
        <div id="PrintLocation">
            <style type="text/css">
                table {
                    border-collapse: collapse;
                    width: 100%;
                }

                th {
                    height: 50px;
                    text-align: center;
                }

                table, th, td {
                    border: 1px solid black;
                    background-color: white;
                }

                td {
                    vertical-align: bottom;
                }

                td {
                    padding: 10px;
                }

                .th td {
                    height: 40px;
                    text-align: center;
                    font-weight: bold;
                }

                .head-table td {
                    padding: 5px;
                }
            </style>
            <div style="padding-top: 10px;">
                <table>
                    <tr>
                        <td style="width: 150px; text-align: center; padding: 0">
                            <img src="@Model.Domain/Images/v3pdf.png" />
                        </td>
                        <td style="text-align:center; font-size:20px;font-weight:bold">
                            <span style="font-size: 22px;">
                                PURCHASE ORDER
                            </span>
                            <br />
                            <i>ĐƠN ĐẶT HÀNG</i>
                        </td>
                    </tr>
                </table>
            </div>
            <div style="padding-top: 10px; font-size: 12px" class="head-table">
                <div style="float: left; width: 60%;">
                    <table>
                        <tr>
                            <td style="width: 150px;font-weight: bold;">
                                From - <i>Từ</i>:
                            </td>
                            <td style="font-weight:bold">
                                VIVABLAST (VIETNAM) Co., Ltd.
                            </td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Address - <i>Địa chỉ</i>:</td>
                            <td>Binh Chieu I.Z, Binh Chieu Ward, Thu Duc, HCMC</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Tax code - <i>MST</i>:</td>
                            <td>0300791426</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Tel:</td>
                            <td>(08) 38 965 007</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">Fax:</td>
                            <td>(08) 38 965 004</td>
                        </tr>
                        <tr>
                            <td style="font-weight: bold;">PE Staff:<br /><i>Nhân viên mua hàng:</i></td>
                            <td></td>
                        </tr>
                    </table>
                </div>

                <div style="float: left; width: 40%; padding-left: 20px;">
                    <div style="font-weight: bold;">Date - <i>Ngày</i>:</div>
                    <table>
                        <tr>
                            <td style="width: 150px;font-weight: bold;">
                                To:
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>
            </div>

            <div style="clear: both"></div>
            <div style="padding-top: 10px;">
                <div style="float: left; width: 450px">
                    <span style="font-weight: bold; margin-right: 10px;">Project No:</span> @Model.PurchaseOrderCustom.Project_Code
                </div>
                <div style="float: left; width: 300px">
                    <span style="font-weight: bold; margin-right: 10px;">P.O no - <i>ĐĐH số:</i>:</span> @Model.PurchaseOrderCustom.PE
                </div>
            </div>
            <div style="clear: both"></div>
            <div>
                <div style="float: left; width: 450px">
                    <span style="font-weight: bold; margin-right: 10px;">Project Name:</span> @Model.PurchaseOrderCustom.Project_Name
                </div>
            </div>
            <div style="clear: both; height: 10px;"></div>
            <div>
                <table>
                    <tr>
                        <th>Item</th>
                        <th>Stock ID<br /><i>Mã hàng</i></th>
                        <th>Description<br /><i>Mô tả</i></th>
                        <th>Ral</th>
                        <th>Color<br /><i>Màu</i></th>
                        <th>Unit<br /><i>ĐVT</i></th>
                        <th>Qty<br /><i>S.Lượng</i></th>
                        <th>MRF#</th>
                        <th>Unit price<br />(VND)<br /><i>Đơn giá</i></th>
                        <th>Discount<br /><i>Giảm giá</i></th>
                        <th>Total<br />(VND)<br /><i>Thành tiền</i></th>
                    </tr>
                    @{var i = 1;}
                    @foreach (var item in Model.PoDetailsVResults)
                    {
                        <tr>
                            <td style="text-align: center">@i</td>
                            <td>@item.Stock_Code</td>
                            <td>@item.Stock_Name</td>
                            <td></td>
                            <td></td>
                            <td>@item.Unit</td>
                            <td>@item.Quantity.Value.ToString("g29")</td>
                            <td>@item.MRF</td>
                            <td>@item.UnitPrice</td>
                            <td style="text-align: center">@item.Discount</td>
                            <td style="text-align: center">@item.Item_Total</td>
                        </tr>
                        i++;
                    }
                    <tr>
                        <td colspan="8"></td>
                        <td style="font-size: 12px;">Sub Total</td>
                        <td colspan="2" style="font-size: 12px;">@Model.PurchaseOrderCustom.TotalNotVAT</td>
                    </tr>
                    <tr>
                        <td colspan="8"></td>
                        <td style="font-size: 12px;">VAT</td>
                        <td colspan="2" style="font-size: 12px;">@Model.PurchaseOrderCustom.TotalVAT</td>
                    </tr>
                    <tr>
                        <td colspan="8"></td>
                        <td style="font-size: 12px;">Total</td>
                        <td colspan="2" style="font-size: 12px;">@Model.PurchaseOrderCustom.Total</td>
                    </tr>
                </table>
            </div>
            <div style="clear: both"></div>
            <div style="margin-top: -10px;">
                <div>Delivery Time - <i>Thời gian nhận hàng</i>:</div>
                <div>Delivery Location - <i>Địa điểm nhận hàng</i>:</div>
                <div>Term payment - <i>Điều kiện thanh toán</i>:</div>
                <div>Notes - <i>Ghi chú</i>:</div>
            </div>
        </div>

        @using (Html.BeginForm("PrintPdf", "Helper", FormMethod.Post, new { id = "myform" }))
        {
            <div style="margin-top: 20px">
                <button type="button" id="btnPrint">Download</button>
                <input type="hidden" name="content" id="hidContent" value="" />
                <input type="hidden" name="fileName" id="fileName" value="PE" />
                <input type="hidden" name="voucher" id="voucher" value="@Model.PurchaseOrderCustom.Id" />
            </div>

        }
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
        });
        /// <summary>Enum for Page Type</summary>
        var PDFPageType = {
            Default: 'Default',
            Portrait: 'Portrait',
            Landscape: 'Landscape'
        }

        $('#btnPrint').click(function () {
            var printContents = '<html><head><title></title><meta http-equiv="Content-Type" content="text/html; charset=utf-8" /></head><body>' + $('#PrintLocation').html() + '</body></html>';
            var pageType = PDFPageType.Portrait;
            $('#hidContent').val(htmlEncode(printContents));
            $('#myform').submit();
        });

        function htmlEncode(value) {
            //create a in-memory div, set it's inner text(which jQuery automatically encodes)
            //then grab the encoded contents back out.  The div never exists on the page.
            return $('<div/>').text(value).html();
        }

        function htmlDecode(value) {
            return $('<div/>').html(value).text();
        }
    </script>
</body>
</html>
