@using Ap.Common.Constants

@{
    ViewBag.Title = "Dynamic Report For PO";
}

<div class="bs-docs-header">
    <div class="container" role="search">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <form class="form-inline">
                    <div class="form-group">
                        <label>PO Type</label>
                        <select id="searchPoType">
                            <option value="0">All</option>
                            <option value="1">Normal</option>
                            <option value="2">Demo</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>PO Code</label>
                        <input type="text" name="searchPoCode" class="form-control" id="searchPoId" placeholder="PO Code">
                    </div>
                    <div class="form-group">
                        <label>Stock Type</label>
                        <select id="searchStockType">
                            <option>All</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Category</label>
                        <select id="searchStockCategory">
                            <option>All</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Stock Code</label>
                        <input type="text" name="searchStockCode" class="form-control" id="searchStockCode" placeholder="Stock Code">
                    </div>
                    <div class="form-group">
                        <label>Stock Name</label>
                        <input type="text" name="searchStockName" class="form-control" id="searchStockName" placeholder="Stock Name">
                    </div>

                    <div class="form-group">
                        <label>From</label>
                        <input id="fromDate" type="text" class="form-control datepicker" />
                    </div>
                    <div class="form-group">
                        <label>To</label>
                        <input id="toDate" value="@Constants.ToDate" type="text" class="form-control datepicker" />
                    </div>
                    <div class="form-group">
                        <label>Group PO</label>
                        <input id="searchGroupPo" type="checkbox" class="form-control" />
                    </div>
                    <div class="form-group button-control">
                        <button type="button" id="btnSearch" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Search
                        </button>
                        <button type="button" id="btnExport" class="btn btn-primary">
                            <span class="glyphicon glyphicon-export"></span> Export
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container" role="list">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="list-session">
                <div class="alert alert-info bold" role="alert">LOADING...</div>
            </div>
        </div>
    </div>
</div>

<script src="/Scripts/tmx.report.js?v=@System.Configuration.ConfigurationManager.AppSettings["Version"]"></script>