@using Ap.Common.Constants
@using Vivablast.ViewModels
@model StockViewModel

@if (Model.TotalRecords == 0)
{
    <div>
        @Constants.NoData
    </div>
}
else
{
    <div>
        @Model.TotalRecords @Constants.DisplayResult
    </div>
    <div class="table-responsive">
        <table id="StockQtyManageLst" class="table table-bordered table-hover">
            <thead>
                <tr class="vbhead">
                    <th class="center">
                        Status
                    </th>
                    <th class="center">
                        Date
                    </th>
                    <th class="center">
                        Stock Code
                    </th>
                    <th class="center">
                        Current Qty
                    </th>
                    <th class="center">
                        Change Qty
                    </th>
                    <th class="center">
                        Qty
                    </th>
                    <th class="center">
                        Store
                    </th>
                    <th class="center">
                        SIV
                    </th>
                    <th class="center">
                        SRV
                    </th>
                    <th class="center">
                        User
                    </th>
                    <th class="center">
                        Project Code
                    </th>
                    <th class="center">
                        Project Name
                    </th>
                    <th class="center width60">
                        MRF
                    </th>
                    <th class="center">
                        PO ID
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StockQuantityManagementResults)
                {
                    <tr class="vbcolum">
                        <td class="center">
                            @item.Status
                        </td>
                        <td>
                            @Constants.ConvertDate(item.Date.ToString())
                        </td>
                        <td class="center">
                            @item.Stock_Code
                        </td>
                        <td class="center">
                            @item.Quantity_Current
                        </td>
                        <td class="center">
                            @item.Quantity_Change
                        </td>
                        <td class="center">
                            @item.Quantity_After_Change
                        </td>
                        <td class="center">
                            @item.ToStore
                        </td>
                        <td class="center">
                            @item.SIV
                        </td>
                        <td class="center">
                            @item.SRV
                        </td>
                        <td>
                            @item.User
                        </td>
                        <td>
                            @item.Project_Code
                        </td>
                        <td>
                            @item.Project_Name
                        </td>
                        <td class="center">
                            @item.MRF
                        </td>
                        <td class="center">
                            @item.PO_Code
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    if (Model.TotalPages > 1)
    {
        <div style="float: left;">
            @Html.Partial("Partials/_PreparePagingPartial")
        </div>
    }
}