@using Ap.Common.Constants
@using Vivablast.ViewModels
@model StoreViewModel

@{
    ViewBag.Title = "Store";
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "store-create-form", @class = "form-horizontal" }))
        {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.Code, new { @id = "hidCheckCode" })
            @Html.HiddenFor(x => x.Name, new { @id = "hidCheckName" })
            @Html.HiddenFor(x => x.Timestamp)
            @Html.HiddenFor(x => x.UserLogin.Id, new { @id = "iLogin" })
            <input type="hidden" value="@Url.Action("Create", "Store")" id="hidSaveUrl" />
            <div class="col-xs-12 height10"></div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="col-sm-4">Country <span class="red">*</span></label>
                    <div class="col-sm-8">
                        @Html.DropDownListFor(model => model.CountryId, Model.Countries, Constants.SelectDDL, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">Name <span class="red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Name, new { @placeholder = "Name", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">Code <span class="red">*</span></label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Code, new { @placeholder = "Code", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">Address</label>
                    <div class="col-sm-8">
                        @Html.TextAreaFor(
                                model => model.Address,
                                new { @placeholder = "Address", @class = "auto-size", }
                                )
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label class="col-sm-4">Telephone</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Tel, new { @placeholder = "Telephone", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">Mobile Phone</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.Phone, new { @placeholder = "Mobile Phone", @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4">Description</label>
                    <div class="col-sm-8">
                        @Html.TextAreaFor(
                            model => model.Description,
                            new { @placeholder = "Description", @class = "auto-size", }
                            )
                    </div>
                </div>
            </div>

                <div class="col-xs-12 modal-footer center">
                    <button id="btnSave" class="btn btn-danger" data-dismiss="modal" data-loading-text="Saving..." type="button">
                        <span class="glyphicon glyphicon-save"></span>Save
                    </button>
                    <a href="@Url.Action("Create", "Store")" class="btn btn-primary btnAdd displaynone">
                        <span class="glyphicon glyphicon-plus"></span>New
                    </a>
                    @Html.ActionLink("Back To List Store", "Index", "Store", new { @class = "btn btn-default" })
                </div>
        }
    </div>
</div>
<script src="/Scripts/tmx.storeact.js?v=@System.Configuration.ConfigurationManager.AppSettings["Version"]"></script>
