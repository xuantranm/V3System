@using Ap.Common.Constants
@using Vivablast.ViewModels
@model StoreViewModel

@{
    ViewBag.Title = "Index";
}
<div class="bs-docs-header">
    <div class="container" role="search">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <form class="form-inline">
                    <div class="form-group">
                        <label>Country</label>
                        @Html.DropDownListFor(model => model.CountryId, Model.Countries, @Constants.AllDLL, new { @id = "country", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Code</label>
                        <input type="text" name="StoreCode" class="form-control" id="StoreCode" placeholder="Store Code">
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="StoreName" class="form-control" id="StoreName" placeholder="Store Name">
                    </div>
                    <div class="form-group">
                        <label>@Constants.Rows</label>
                        <select id="pageSize" class="form-control">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                            <option value="0">All</option>
                        </select>
                    </div>
                    <div class="form-group button-control">
                        <button type="button" id="btnSearch" class="btn btn-primary">
                            <span class="glyphicon glyphicon-search"></span> Search
                        </button>
                        @if (Model.UserLogin.StoreR > 1)
                        {
                            <a href="@Url.Action("Create","Store")" class="btn btn-primary">
                                <span class="glyphicon glyphicon-plus"></span> New
                            </a>
                        }

                        <button type="button" id="btnExport" class="btn btn-primary">
                            <span class="glyphicon glyphicon-export"></span> Export
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
               
<div class="container" role="list">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="list-session">
                <div class="alert alert-info bold" role="alert">LOADING...</div>
            </div>
        </div>
    </div>
</div>
                    
<input type="hidden" value="@Url.Action("Delete", "Store")" id="hidDeleteUrl" />
<script src="/Scripts/tmx.storemanager.js?v=@System.Configuration.ConfigurationManager.AppSettings["Version"]"></script>
